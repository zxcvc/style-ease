{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "sourceMap": false,
        "target": "ES2017",
        "useDefineForClassFields": false,
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "rootDir": ".",
        "paths": {
            "@styleease/*": ["packages/*/src"]
        }
    },
    "include": ["./packages/**/src"]
}
